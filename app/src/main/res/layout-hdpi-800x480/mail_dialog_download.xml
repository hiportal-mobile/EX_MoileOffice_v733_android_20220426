<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="450px"
  	android:layout_height="wrap_content"
  	android:orientation="vertical"
  	android:layout_gravity="center"
  	android:gravity="center_horizontal"
  	android:background="@drawable/mail_popup_bg"	>

  
	<LinearLayout
		android:id="@+id/layoutDlgTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
  		android:paddingLeft="5px"
  		android:paddingRight="5px"
  		android:paddingTop="3px">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="47px"
	  		android:paddingLeft="50px"
	  		android:paddingRight="50px"
			android:gravity="center_horizontal"
			android:orientation="horizontal">
		  	<ImageView
		  		android:id="@+id/imgDlgIcon"
		  		android:layout_width="32px"
		  		android:layout_height="29px"
		  		android:layout_marginTop="5px"
		  		android:visibility="gone" />
		  	<TextView
		  		android:id="@+id/txtDlgTitle"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_marginTop="6px"
		  		android:paddingLeft="10px"
		  		android:textSize="20px"
		  		android:textColor="#ff7caf22"
		  		android:text=""
		  		android:ellipsize="marquee"
		  		android:singleLine="true"/>  	
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
  		android:paddingLeft="5px"
  		android:paddingRight="5px"
  		android:orientation="vertical">
		<TextView
	  		android:id="@+id/txtDlgContent"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:gravity="center_horizontal"
	  		android:layout_marginTop="9px"
	  		android:paddingLeft="22px"
	  		android:paddingRight="21px"
	  		android:paddingBottom="10px"
	  		android:textSize="18sp"
  			android:textColor="#464646"
	  		android:text="해당 파일을 구동할 수 있는 프로그램이 설치되어있지 않으면 다운로드가 안될 수 있습니다."
			android:lineSpacingExtra="5px"
			android:singleLine="false"/>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="30px"
				android:paddingRight="30px"
				android:gravity="center_horizontal">
				<CheckBox
				  		android:id="@+id/CheckNext"
				  		android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textSize="14sp"
		  				android:textColor="#ff3d3d3d"
				  		android:text=" 더 이상 표시하지 않음"
				  		android:layout_gravity="center_vertical" />
			</LinearLayout>
	</LinearLayout>
	

	
	
	
		<LinearLayout
	    android:orientation="horizontal"
		android:layout_width="fill_parent" 
	    android:layout_height="78px"
	    android:layout_marginTop="30px"
	    android:gravity="center"
	    android:background="@drawable/mail_popup_btn_bg">
		<Button
			android:id="@+id/btnDlgDownOk"
			android:layout_width="200px" 
		    android:layout_height="64px"
		    android:layout_gravity="center"
		    android:gravity="center" 
		    android:textSize="16sp"
		    android:textColor="#FFFFFFFF"
		    android:shadowColor="#FF464646"
		    android:shadowDx="1.0"
		    android:shadowDy="1.0"
		    android:shadowRadius="1.0"
		    android:background="@drawable/mail_popup_btn_selector"
		    android:text="확인"
		    android:layout_marginLeft="4px"/>
		<Button
			android:id="@+id/btnDlgDownCancel"
			android:layout_width="200px" 
		    android:layout_height="64px"
		    android:layout_marginLeft="10px"
		    android:layout_gravity="center"
		    android:gravity="center" 
		    android:textSize="16sp"
		    android:textColor="#FFFFFFFF"
		    android:shadowColor="#FF464646"
		    android:shadowDx="1.0"
		    android:shadowDy="1.0"
		    android:shadowRadius="1.0"
		    android:background="@drawable/mail_popup_btn_selector"
		    android:text="취소"
		    android:layout_marginRight="4px"/>
	</LinearLayout>	   
	
</LinearLayout>
