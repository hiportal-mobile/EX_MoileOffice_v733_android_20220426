<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listsearchresultview"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/easy_member_list_btn_back_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20px" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ROW_EMPLOYEE_NAME"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#3E3E3E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ROW_EMPLOYEE_ID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#8A8A8A"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ROW_EMPLOYEE_CORP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#3E3E3E"
            android:textSize="15sp" />
        <!--
             <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:orientation="vertical" > 회사명을 넣을 공간. <TextView android:id="@+id/ROW_EMPLOYEE_DEPT" 
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical" 
			android:layout_marginLeft="10px" android:textSize="14sp" android:singleLine="true" 
			android:textColor="#5a5a5a" /> </LinearLayout>
        -->
    </LinearLayout>

    <ImageView
        android:id="@+id/ROW_EMPLOYEE_SMS"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/easy_member_btn_sms_selector" />

    <ImageView
        android:id="@+id/ROW_EMPLOYEE_PHONE"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/easy_member_btn_mobile_selector" />

    <ImageView
        android:id="@+id/ROW_EMPLOYEE_LANDLINE"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/easy_member_btn_phone_selector" />

</LinearLayout>