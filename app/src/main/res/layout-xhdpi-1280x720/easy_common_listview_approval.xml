<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.ex.group.approval.easy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/easyaproavl_space03"
    android:background="@drawable/easy_common_selector_listview"
    android:gravity="center_vertical"
    >
    <!-- 첨부파일 아이콘 -->
	<ImageView
		android:id="@+id/common_approval_listview_imageview_attachment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/easy_icon_clip"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="@dimen/easyaproavl_space03"
		android:visibility="gone"
		/>
    <!-- 결재정보 항목 -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="@dimen/easyaproavl_height08"
		android:orientation="vertical"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/common_approval_listview_imageview_attachment"
		android:gravity="center_vertical"
		>
		<!-- 결재 제목 -->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginTop="@dimen/easyaproavl_space01"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			>
			<TextView
		    	android:id="@+id/common_approval_listview_textview_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="외출신청서(사무.08월09일 16시 30분 ~ 18시 50)"
				android:singleLine="true"
				android:textColor="#333333"
				android:textSize="@dimen/easyaproavl_textSize02"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginBottom="@dimen/easyaproavl_space01"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			>
			<TextView
		    	android:id="@+id/common_approval_listview_textview_writer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#626262"
				android:textSize="@dimen/easyaproavl_textSize04"
				android:text="김갑수"
				/>
			<!-- 세로 구분선 -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/easy_line_bar"
				/>
			<TextView
		    	android:id="@+id/common_approval_listview_textview_dept_nm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#626262"
				android:textSize="@dimen/easyaproavl_textSize04"
				android:text="정보처 정보기획팀"
				/>
			<!-- 세로 구분선 -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/easy_line_bar"
				/>
			<TextView
		    	android:id="@+id/common_approval_listview_textview_sign_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#2273AA"
				android:textSize="@dimen/easyaproavl_textSize04"
				android:text="2011.08.19"
				/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
