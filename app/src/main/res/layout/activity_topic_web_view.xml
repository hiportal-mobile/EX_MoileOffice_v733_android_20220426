<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicWebViewActivity"
    android:weightSum="640"
    android:orientation="vertical">
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="46"
    android:background="@color/main_title_bg">
    <LinearLayout
        android:background="#042244"
        android:id="@+id/main_mobileoffice_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="360"
        android:gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"/>
        <ImageView
            android:id="@+id/button_prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_prev"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="66"></LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="136"
            android:textSize="17dp"
            android:textStyle="bold"
            android:scaleType="fitCenter"
            android:textColor="@color/white"
            android:text="주요 뉴스"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"/>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="106"/>


    </LinearLayout>



</LinearLayout>


    <WebView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="594"
        android:textColor="@color/colorAccent"/>

</LinearLayout>