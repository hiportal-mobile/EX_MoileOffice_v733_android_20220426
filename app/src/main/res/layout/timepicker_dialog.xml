<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/custom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/tv_start"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="시작"
                android:letterSpacing="0.4"
                android:textSize="16sp"
                android:textColor="#052850"/>

            <TextView
                android:id="@+id/tv_end"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="종료"
                android:letterSpacing="0.4"
                android:textSize="16sp"
                android:textColor="#052850"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">

            <View
                android:id="@+id/underline_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="#5f5f5f"/>

            <View
                android:id="@+id/underline_end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
               />
        </LinearLayout>
        <LinearLayout
            android:background="#feffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ex.group.folder.utility.CTimePicker
                style="@style/switchNOTI"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"></com.ex.group.folder.utility.CTimePicker>
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="3"
                android:gravity="right"
                android:orientation="horizontal"
                android:background="@drawable/timepicker_dialog_negative_selector">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/btn_close"
                    android:background="@drawable/timepicker_dialog_negative_selector"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#1e2e4d"
                    android:text="취소"
                    android:layout_height="match_parent"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_confirm"
                android:textColor="#1e2e4d"
                android:textSize="14sp"
                android:text="확인"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <View
                android:layout_height="match_parent"
                android:layout_width="25dp"
                android:background="@drawable/timepicker_dialog_positive_selector"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
