         	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			회사명을 넣을 공간.

			<TextView
				android:id="@+id/ROW_EMPLOYEE_DEPT"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10px"
				android:textSize="21px"
				android:singleLine="true"
				android:textColor="#5a5a5a" />
		</LinearLayout>
        -->
    </LinearLayout>

    <ImageView
        android:id="@+id/ROW_EMPLOYEE_SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="21px"
        android:clickable="true"
        android:src="@drawable/mail_member_btn_sms_selector" />

    <ImageView
        android:id="@+id/ROW_EMPLOYEE_PHONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="21px"
        android:clickable="true"
        android:src="@drawable/mail_member_btn_mobile_selector" />

    <ImageView
        android:id="@+id/ROW_EMPLOYEE_LANDLINE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="21px"
        android:clickable="true"
        android:src="@drawable/mail_member_btn_phone_selector" />

</LinearLayout>