<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listsearchresultview"
    android:layout_width="fill_parent"
    android:layout_height="100px"
    android:background="@drawable/mail_member_list_btn_back_selector" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/employee_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/mail_member_line_02"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/employee_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginRight="5px"
            android:background="@drawable/mail_member_line_03"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20px" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="5px"
            android:layout_marginTop="30px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ROW_EMPLOYEE_NAME"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="#202020"
                android:textSize="28px" />

            <TextView
                android:id="@+id/ROW_EMPLOYEE_CORP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#5a5a5a"
                android:textSize="21px" />
        </LinearLayout>

        <!-- <TextView
            android:id="@+id/ROW_EMPLOYEE_TEAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="21px" /> -->
