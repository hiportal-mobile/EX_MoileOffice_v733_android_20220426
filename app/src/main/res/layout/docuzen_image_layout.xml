<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout01"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="#ffffff" 
	android:paddingBottom="0dip"
	android:layout_gravity="center">

	<handyhis.dz.viewer.DzImageViewer.docuzen.ViewTouchImage
		android:id="@+id/hisimage" 
		android:scaleType="fitXY"
		android:paddingLeft="0dip" 
		android:paddingRight="0dip"
		android:paddingTop="0dip" 
		android:paddingBottom="0dip"
		android:background="@drawable/dz_bg2" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:tag="hisimage"/>

	<LinearLayout
		android:orientation="horizontal" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_margin="0dip"
		android:background="#00000000" 
		android:layout_gravity="top|right">
		
		<LinearLayout
			android:id="@+id/blank1" 
			android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_margin="0dip" 
			android:background="#00000000"
			android:layout_weight="1" />

		<handyhis.dz.viewer.DzImageViewer.docuzen.SmallImage
			android:id="@+id/previewimage" 
			android:scaleType="fitXY"
			android:background="#00000000" 
			android:layout_width="102dip"
			android:layout_height="157dip" 
			android:layout_weight="1"
			android:layout_margin="3dip" 
			android:layout_gravity="right" 
			android:tag="previewimage"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/toolBar"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:background="#ababab"
		android:layout_gravity="bottom"
		android:paddingLeft="0dip"
		android:paddingRight="0dip"
		android:paddingTop="1dip"
		android:paddingBottom="0dip"
		android:layout_marginLeft="0dip"
		android:layout_marginRight="0dip"
		android:layout_marginBottom="0dip"
		android:tag="toolBar" >
		<LinearLayout
			android:orientation="horizontal" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:background="#f3f3f3"
			android:layout_gravity="bottom"
			android:paddingLeft="30dip"
			android:paddingRight="30dip"
			android:paddingTop="20dip"
			android:paddingBottom="20dip"
			android:layout_marginLeft="0dip"
			android:layout_marginRight="0dip"
			android:layout_marginBottom="0dip" >
			<ImageButton android:id="@+id/btn_pre"
				android:layout_weight="0" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="bottom"
				android:cropToPadding="true" 
				android:background="@drawable/dz_arrow_left_icon"
				android:tag="btn_pre" />
	
			<LinearLayout
				android:orientation="horizontal" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_margin="0dip"
				android:background="#00000000" 
				android:layout_gravity="top"
				android:layout_weight="1">
			</LinearLayout>
	
			<LinearLayout
				android:orientation="horizontal" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_margin="0dip"
				android:background="#00000000" 
				android:layout_gravity="center"
				android:layout_weight="0">
				
				<ImageButton android:id="@+id/btn_page"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_weight="0" 
					android:gravity="center"
					android:background="@drawable/dz_actions_view_list_text_icon"
					android:tag="btn_page" />
				
				<Button android:id="@+id/page_text" 
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_weight="0"
					android:layout_gravity="center" 
					android:background="#00000000"
					android:textColor="#000000" 
					android:textSize="16dip"
					android:layout_marginLeft="20dip"
					android:text=""
					android:tag="page_text" />
				
				<Button android:id="@+id/btn_layer"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_weight="0" 
					android:gravity="center"
					android:visibility="gone"
					android:text="레이어 선택 변환"
					android:tag="btn_layer" />
				
			</LinearLayout>
	
			<LinearLayout
				android:orientation="horizontal" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_margin="0dip"
				android:background="#00000000" 
				android:layout_gravity="center|bottom"
				android:layout_weight="1">
			</LinearLayout>
	
			<ImageButton 
			    android:id="@+id/btn_next"
				android:layout_weight="0" 
				android:baselineAlignBottom="true"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="bottom" 
				android:background="@drawable/dz_arrow_right_icon"
				android:tag="btn_next">
			</ImageButton>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
