<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74"
            android:weightSum="548"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="56"/>
            <LinearLayout
                android:id="@+id/linear_id"
                android:layout_width="match_parent"
                android:background="@drawable/login_id_edit_box"
                android:layout_height="0dp"
                android:layout_weight="54"
                android:orientation="horizontal"
                android:weightSum="332">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

                <EditText
                    android:id="@+id/edit_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="322"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/login_edt_left1"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:hint="사번 또는 발급 받은 아이디"
                    android:inputType="number"
                    android:letterSpacing="0.18"
                    android:singleLine="true"
                    android:textColor="@color/login_id_edit_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <LinearLayout
                android:id="@+id/linear_pw"
                android:layout_width="match_parent"
                android:background="@drawable/login_id_edit_box"
                android:layout_height="0dp"
                android:layout_weight="54"
                android:orientation="horizontal"
                android:weightSum="332">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>
                <EditText
                    android:background="@color/transparent"
                    android:singleLine="true"
                    android:id="@+id/edit_pw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:hint="비밀번호"
                    android:drawableLeft="@drawable/login_edt_left2"
                    android:drawablePadding="5dp"
                    android:letterSpacing="0.3"
                    android:password="true"
                    android:textColor="@color/login_id_edit_text"
                    android:gravity="center|left"
                    android:layout_weight="322"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_help"
                android:textColor="@color/login_id_help_text"
                android:gravity="left|top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"/>
            <ImageView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="54"
                android:clickable="true"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:scaleType="fitCenter"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="44"
                android:weightSum="44"
                android:orientation="vertical"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="44"
                    android:orientation="horizontal"
                    android:weightSum="332"
                    android:gravity="center"
                    >
                    <CheckBox
                        android:checked="false"
                        android:clickable="true"
                        android:id="@+id/login_id_cb_rememeber_ID"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent"
                        android:button="@drawable/login_save_id_checkbox"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="14"/>
                    <TextView
                        android:id="@+id/login_id_tv_remeber_ID"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/login_id_remeberID"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>




        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"/>


    </LinearLayout>

</FrameLayout>