<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/employeeteam" 
	android:orientation="horizontal"
	android:layout_width="fill_parent" 
	android:layout_height="100px"
	android:background="@drawable/easy_member_list_btn_back_selector">
	
	<LinearLayout
		android:layout_width="70dp"
		android:layout_height="70dp" >
		<TextView
			android:id="@+id/ROW_EMPLOYEE_NAME"
			android:singleLine="true"
			android:layout_width="70dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="5dp"
			android:textSize="24sp"
			android:textColor="#202020" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="0px"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:orientation="vertical"
		android:paddingLeft="20px" >
		<TextView
			android:id="@+id/ROW_EMPLOYEE_TEAM"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:textSize="17sp"
			android:textColor="#333333"
			android:singleLine="true"  />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"	
			android:orientation="horizontal" >
		<!-- 회사명을 넣을 공간. -->
			<TextView
				android:id="@+id/ROW_EMPLOYEE_CORP"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"							
				android:textSize="17sp"
				android:textColor="#5a5a5a" 			
				android:singleLine="true"/>
			<TextView
				android:id="@+id/ROW_EMPLOYEE_DEPT"					
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10px"
				android:textSize="14sp"
				android:singleLine="true"
				android:textColor="#5a5a5a" />
		</LinearLayout>
	</LinearLayout>
		
