<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/listsearchresultview"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background = "#ffffff"
>
	<LinearLayout
		android:id="@+id/listsearchresultview"
		android:layout_width="fill_parent"
		android:layout_height="112px">
		<TextView
			style="@style/easyaproavl_list_name"
			android:id="@+id/ROW_EMPLOYEE_NAME"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="4"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="20px"
			android:singleLine="true"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="6"
			android:layout_marginLeft="21px"
			android:layout_gravity="center_vertical">
			<TextView
				style="@style/easyaproavl_list_company"
				android:id="@+id/ROW_COMPANY"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"				
			/>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/ROW_EMPLOYEE_TEAM"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="14sp"
					android:textColor="#464646"
					android:singleLine="true"
					android:text = "íŒ€"
				/>
				<ImageView
					android:id="@+id/ROW_EMPLOYEE_SPLIT"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginLeft="8px"
					android:layout_marginRight="8px"
					android:src="@drawable/easy_member_split_1x18"/>
				<TextView
					android:id="@+id/ROW_EMPLOYEE_ROLE"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="14sp"
					android:textColor="#464646"
					android:singleLine="true"/>
			</LinearLayout>
			<TextView
				android:id="@+id/ROW_EMPLOYEE_WORK"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="#0F66A3"
				android:singleLine="true"/>
		</LinearLayout>
		<ImageView
			android:id="@+id/ROW_EMPLOYEE_SMS"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="10px"
			android:src="@drawable/easy_member_btn_sms_selector"
			android:clickable="true"/>
		<ImageView
			android:id="@+id/ROW_EMPLOYEE_PHONE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginRight="10px"
			android:layout_marginLeft="10px"
			android:src="@drawable/easy_member_btn_phone_selector"
			android:clickable="true"/>
	</LinearLayout>
</LinearLayout>