<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="452px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/mail_member_popup_bg">
    <LinearLayout
    	android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="0px"
		android:layout_weight="1" 
    	android:paddingLeft="2px"
    	android:paddingRight="2px">
		<LinearLayout
			android:id="@+id/layoutDlgTitle"
	    	android:orientation="vertical"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:visibility="gone">
			<TextView
				android:id="@+id/txtDlgTitle"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:paddingLeft="30px"
			    android:paddingTop="25px" 
			    android:paddingRight="30px"
			    android:paddingBottom="25px"
			    android:gravity="center"
			    android:textSize="18sp" 
			    android:textColor="#FFD16210" />
			<ImageView
				android:id="@+id/imgLine"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:background="@drawable/mail_member_split_popuptitle"/>
		</LinearLayout>
		<TextView
			android:id="@+id/txtDlgContent"
			android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:paddingLeft="30px"
		    android:paddingTop="25px" 
		    android:paddingRight="30px"
		    android:paddingBottom="25px"
		    android:gravity="center"
		    android:textSize="18sp" 
		    android:textColor="#FF464646" />
	</LinearLayout>
	<LinearLayout
	    android:orientation="horizontal"
		android:layout_width="fill_parent" 
	    android:layout_height="78px"
	    android:gravity="center"
	    android:background="@drawable/mail_member_popup_btn_bg">
		<Button
			android:id="@+id/btnDlgOk"
			android:layout_width="204px" 
		    android:layout_height="64px"
		    android:layout_gravity="center"
		    android:gravity="center" 
		    android:textSize="16sp"
		    android:textColor="#FFFFFFFF"
		    android:shadowColor="#FF464646"
		    android:shadowDx="1.0"
		    android:shadowDy="1.0"
		    android:shadowRadius="1.0"
		    android:background="@drawable/mail_member_popup_btn_selector" />
		<Button
			android:id="@+id/btnDlgCancel"
			android:layout_width="204px" 
		    android:layout_height="64px"
		    android:layout_marginLeft="10px"
		    android:layout_gravity="center"
		    android:gravity="center" 
		    android:textSize="16sp"
		    android:textColor="#FFFFFFFF"
		    android:shadowColor="#FF464646"
		    android:shadowDx="1.0"
		    android:shadowDy="1.0"
		    android:shadowRadius="1.0"
		    android:background="@drawable/mail_member_popup_btn_selector" />
	</LinearLayout>	   
</LinearLayout>
