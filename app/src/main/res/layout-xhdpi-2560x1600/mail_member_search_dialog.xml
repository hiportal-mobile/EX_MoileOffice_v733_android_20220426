<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:minWidth="460px"  
	android:minHeight="297px"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:layout_gravity="center"
  	android:gravity="center_horizontal">
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="40px"
  		android:layout_marginBottom="26px"
  		android:paddingLeft="10px"
  		android:textSize="30px"
  		android:textColor="@color/mail_White"
  		android:ellipsize="marquee"/>
  	<ImageView
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"/>
  	<TextView
  		android:id="@+id/re_DEL"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="10px"
  		android:paddingLeft="5px"
  		android:paddingRight="5px"
  		android:textSize="20px"
  		android:textColor="@color/mail_White"
  		android:text="@string/mail_mailbox_S"
  		android:singleLine="true"
  		android:visibility="invisible"/>
  	<EditText
	  	android:id="@+id/PWD"
  		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:layout_marginTop="5px"
		android:layout_marginLeft="15px"
		android:layout_marginRight="15px"
		android:layout_weight="1"
		android:gravity="center_horizontal"/>
  	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/Ok"
			android:layout_width="200px"
			android:layout_height="64px"
			android:layout_marginTop="6px"
			android:layout_marginLeft="10px"
	  		android:layout_marginBottom="11px"
			android:text="확인"
			android:textSize="20px"
			android:textColor="@drawable/mail_popup_button_text_selector"/>
		<Button
			android:id="@+id/can"
			android:layout_width="200px"
			android:layout_height="64px"
			android:layout_marginTop="6px"
			android:layout_marginLeft="15px"
	  		android:layout_marginRight="10px"
	  		android:layout_marginBottom="11px"
			android:text="취소"
			android:textSize="20px"
			android:textColor="@drawable/mail_popup_button_text_selector"/>
	</LinearLayout>	
</LinearLayout>

