<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <shape android:shape="rectangle">

            <solid android:color="@color/login_id_button_bg_clicked"/>
            <!-- Set the same value for both width and height to get a circular shape -->
            <corners
                android:radius="44dp"/>
            <size android:width="332dp" android:height="44dp"/>
        </shape>

    </item>


    <item
        android:state_pressed="false">


        <shape android:shape="rectangle">
            <solid android:color="@color/login_id_button_bg"/>
            <!-- Set the same value for both width and height to get a circular shape -->
            <corners
                android:radius="44dp"/>
            <size android:width="332dp" android:height="44dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true"
        >
        <shape android:shape="rectangle">

            <solid android:color="@color/login_id_button_bg_clicked"/>
            <!-- Set the same value for both width and height to get a circular shape -->
            <corners
                android:radius="44dp"/>
            <size android:width="332dp" android:height="44dp"/>
        </shape>

    </item>

</selector>
    
