<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <!-- 
    android:background="@drawable/popup_bg">
     -->
    <LinearLayout
    	android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="0px"
		android:layout_weight="1" 
    	android:paddingLeft="2px"
    	android:paddingRight="2px"
    	
    	>
		<TextView
			android:id="@+id/title"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:paddingLeft="30px"
		    android:paddingTop="32px" 
		    android:paddingRight="30px"
		    android:paddingBottom="32px"
		    android:gravity="center"
		    android:textSize="28px" 
		    android:textColor="#FFD16210"
		    android:visibility="gone"
		    />
		<ImageView
			android:id="@+id/imgLine"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    />
		    <!--  
		    android:background="@drawable/split_popuptitle"/>
		     -->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center">
			<com.skt.pe.widget.wheelview.WheelView
				android:id="@+id/WHEEL_YEAR"
				android:layout_width="120dp"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"/>
			<com.skt.pe.widget.wheelview.WheelView
				android:id="@+id/WHEEL_MONTH"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"/>
			<com.skt.pe.widget.wheelview.WheelView
				android:id="@+id/WHEEL_DAY"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"/>
		</LinearLayout>
	</LinearLayout>
