<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/mail_member_list_btn_back_selector">
	<LinearLayout
		android:id="@+id/type_folder"
		android:layout_width="fill_parent"
		android:layout_height="100px"
		android:orientation="horizontal"
		android:visibility="gone">
		<ImageView
			android:id="@+id/employee_line"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:layout_margin="20px"
			android:src="@drawable/mail_member_icon_folder" />
		<TextView
			android:id="@+id/ROW_FOLDER_NAME"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="28px"
			android:layout_marginLeft="12px"
			android:textSize="28px"
			android:textColor="#202020" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/type_list"
		android:layout_width="fill_parent"
		android:layout_height="100px"
		android:orientation="horizontal"
		android:visibility="visible">
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:layout_marginTop="18px"
			android:paddingLeft="20px">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/ROW_EMPLOYEE_NAME"
					android:singleLine="true"
					android:layout_width="120px"
					android:layout_height="wrap_content"
					android:textSize="30px"
					android:textColor="#202020" />
				<TextView
					android:id="@+id/ROW_EMPLOYEE_ID"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textSize="25px"
					android:textColor="#333333"
					android:singleLine="true" />
			</LinearLayout>
			<TextView
				android:id="@+id/ROW_EMPLOYEE_CORP"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textSize="25px"
				android:textColor="#5a5a5a"
				android:singleLine="true" />
			<!-- <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:orientation="vertical" > 회사명을 넣을 공간. <TextView android:id="@+id/ROW_EMPLOYEE_DEPT" 
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical" 
				android:layout_marginLeft="10px" android:textSize="14sp" android:singleLine="true" 
				android:textColor="#5a5a5a" /> </LinearLayout> -->
		</LinearLayout>
	<ImageView
		android:id="@+id/ROW_EMPLOYEE_SMS"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="7px"
		android:layout_marginRight="7px"
		android:src="@drawable/mail_member_btn_sms_selector"
		android:clickable="true" />
	<ImageView
		android:id="@+id/ROW_EMPLOYEE_PHONE"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginRight="7px"
		android:src="@drawable/mail_member_btn_mobile_selector"
		android:clickable="true" />
	<ImageView
		android:id="@+id/ROW_EMPLOYEE_LANDLINE"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginRight="10px"
		android:src="@drawable/mail_member_btn_phone_selector"
		android:clickable="true" />
	</LinearLayout>
</LinearLayout>